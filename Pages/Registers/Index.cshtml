@page
@model NAVASCA_PROEL4WProject.Pages.Registers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Registered Users</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Register[0].ConfirmPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Register) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProfileId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProfileId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProfileId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
