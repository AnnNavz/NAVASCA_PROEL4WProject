@page
@model NAVASCA_PROEL4WProject.Pages.Registers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-body p-4">
                    <h2 class="text-danger mb-1">Delete</h2>
                    <h4 class="text-muted mb-3">Are you sure you want to delete this?</h4>

                    <div class="alert alert-warning">
                        <strong>Warning!</strong> This action cannot be undone. All data associated with this profile will be permanently removed.
                    </div>

                    <hr class="mb-4" />

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Register.FirstName)
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @Html.DisplayFor(model => model.Register.FirstName)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Register.LastName)
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @Html.DisplayFor(model => model.Register.LastName)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Register.Email)
                        </dt>
                        <dd class="col-sm-8 text-primary">
                            @Html.DisplayFor(model => model.Register.Email)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.Register.Username)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Register.Username)
                        </dd>
                    </dl>

                    <div class="mt-4 pt-3 border-top">
                        <form method="post">
                            <input type="hidden" asp-for="Register.ProfileId" />
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-danger px-4">
                                    Delete Permanently
                                </button>
                                <a asp-page="./Index" class="btn btn-outline-secondary">
                                    Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>