@page
@model NAVASCA_PROEL4WProject.Pages.RegisterShops.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="mb-1">Details</h2>
                    <h4 class="text-muted mb-3">Shop Information</h4>
                    <hr class="mb-4" />

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.RegisterShop.ShopName)
                        </dt>
                        <dd class="col-sm-8 fw-bold text-uppercase">
                            @Html.DisplayFor(model => model.RegisterShop.ShopName)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.RegisterShop.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RegisterShop.Description)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.RegisterShop.PickupAddress)
                        </dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-geo-alt"></i> @Html.DisplayFor(model => model.RegisterShop.PickupAddress)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.RegisterShop.ContactNumber)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.RegisterShop.ContactNumber)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.RegisterShop.Email)
                        </dt>
                        <dd class="col-sm-8 text-primary">
                            @Html.DisplayFor(model => model.RegisterShop.Email)
                        </dd>
                    </dl>

                    <div class="mt-4 pt-3 border-top d-flex gap-2">
                        <a asp-page="./Edit" asp-route-id="@Model.RegisterShop.ShopID" class="btn btn-primary px-4">
                            Edit Shop
                        </a>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>